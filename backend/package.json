{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
"scripts": {
  "dev:generate": "npx prisma generate --schema=prisma/schema.prisma",
  "dev": "npm run dev:generate && dotenv -e .env -- node --watch ./src/server.js",

  "test:setup": "dotenv -e .env.test -- npx prisma db push --schema=prisma/schema.test.prisma --force-reset",
  "test:generate": "dotenv -e .env.test -- npx prisma generate --schema=prisma/schema.test.prisma",
  "test": "npm run test:setup && npm run test:generate && dotenv -e .env.test -- cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --runInBand",

  "validate:dev": "dotenv -e .env -- npx prisma validate --schema=prisma/schema.prisma",
  "validate:test": "dotenv -e .env.test -- npx prisma validate --schema=prisma/schema.test.prisma",

  "postinstall": "npx prisma generate --schema=prisma/schema.prisma && npx prisma db push --schema=prisma/schema.prisma"
},
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A renting-tools fullstack application",
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@prisma/adapter-neon": "^6.16.3",
    "@prisma/client": "^6.16.1",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "pg": "^8.16.3",
    "prisma": "^6.16.1",
    "streamifier": "^0.1.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^10.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
